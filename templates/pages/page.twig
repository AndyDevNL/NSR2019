{% extends "base.twig" %}
{% block header %}
<header class="header container headerContainer">
  {% include 'navheader.twig' %}

  <div class="header__image">
    {% if post.get_thumbnail %}
      <img class="image image__banner" src="{{post.thumbnail.src}}" />
    {% endif %}  
  </div>

  <div class="header__title">
    <h1 class="title title--pageBanner">{{ post.title }}</h1>
  </div>
</header>
{% endblock %}

{% block content %}
  <div class="row contentBody">
    <article class="col s12 m8 contentBody__content post-type-{{post.post_type}}" id="post-{{post.ID}}">
      <section class="article-content">
        <div class="article-body">
          {{post.content}}
        </div>
      </section>
    </article>
  
    <div class="col s12 m4 side-bar contentBody__sidebar ">
      <h2 class="title title--med">Agenda</h2>
      <ul>
        <li>item1</li>
        <li>item1</li>
        <li>item1</li>
      </ul>
    </div>
  
  </div>
{% endblock %}


